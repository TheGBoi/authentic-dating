{
  "name": "mindmatch-dating-app",
  "version": "1.0.0",
  "description": "Get to know the mind before the face - A conversation-first dating app",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "dev:mobile": "npm run start --workspace=apps/mobile",
    "dev:ai": "cd apps/ai-services && python -m uvicorn main:app --reload",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "setup:db": "npm run setup:db --workspace=apps/backend"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}